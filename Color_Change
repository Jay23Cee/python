# Every Other letter gets a color change. From blue and red

from termcolor import colored

text1 = "Hello"

array1 = list(text1)

coloredtext = colored('hello', 'red');


print(coloredtext)
print (colored('hello', 'red'), colored('world', 'green'))


isblue = True
Color_array = []

for letter in array1:
    
    if isblue:
        let  = colored(letter, 'blue')
        print(let, end = " ")
        Color_array.append(let)
        isblue = False
    else:
        isblue= True
       
        let= colored(letter, 'red');
        Color_array.append(let)
        print(let, end = " ")
